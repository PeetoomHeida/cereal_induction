	langid = {english},
	keywords = {Carboxylate fates, Ecological functions, Root exudation, Soil physicochemical properties},
	file = {Full Text PDF:/home/isaac/Zotero/storage/97Z7CHVX/Cornelis and de Tombeur - 2022 - Soil controls on carboxylate-driven processes and .pdf:application/pdf},
