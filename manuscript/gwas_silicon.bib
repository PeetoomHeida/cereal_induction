	urldate = {2022-02-08},
	date = {2022-12-31},
	note = {Publisher: Taylor \& Francis
\_eprint: https://doi.org/10.1080/09064710.2021.1984564},
	keywords = {wheat, grain yield, Drought-tolerance, genomic selection, phenotypic selection, protein content, silicon uptake, silicon-use efficiency},
