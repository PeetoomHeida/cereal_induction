	shortjournal = {Plant Physiology and Biochemistry},
	author = {Devanna, B. N. and Mandlik, Rushil and Raturi, Gaurav and Sudhakaran, Sreeja S. and Sharma, Yogesh and Sharma, Shivani and Rana, Nitika and Bansal, Ruchi and Barvkar, Vitthal and Tripathi, Durgesh K. and Shivaraj, S. M. and Deshmukh, Rupesh},
	urldate = {2022-04-24},
	date = {2021-08-01},
	langid = {english},
	keywords = {Silicon, Abiotic stress, Biotic stress, Cereals, Si-transporter},
	file = {ScienceDirect Snapshot:/home/isaac/Zotero/storage/MTMTKCBM/S0981942821002217.html:text/html},
